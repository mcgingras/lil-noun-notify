datasource db {
  provider = "postgres"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Account {
  id          Int   @id @default(autoincrement())
  savedSeeds  AccountSavedSeed[]
}

model SavedSeed {
  id Int @id
  head Int
  body Int
  glasses Int
  accessory Int
  accounts AccountSavedSeed[]
}

model AccountSavedSeed {
  account Account @relation(fields: [accountId], references: [id])
  accountId Int
  savedSeed SavedSeed @relation(fields: [savedSeedId], references: [id])
  savedSeedId Int

  @@id([accountId, savedSeedId])
}
